<?xml version="1.0" encoding="UTF-8"?>

<!-- @author zaw.htet -->
<decorators defaultdir="/sys/decorator">

	<excludes>
		<pattern>/login*</pattern>
		<pattern>/index.jsp</pattern>
	</excludes>

	<!-- Default URL. Handled all unhandled previous URL pattern -->

	<decorator name="defaultDecorator" page="default.jsp">
		<pattern>/*</pattern>
	</decorator>

	<decorator name="volunteerDecorator" page="volunteerDecorator.jsp">
		<pattern>/volunteer/*</pattern>
	</decorator>

	<decorator name="administratorDecorator" page="administratorDecorator.jsp">
		<pattern>/administrator/*</pattern>
	</decorator>
</decorators>
