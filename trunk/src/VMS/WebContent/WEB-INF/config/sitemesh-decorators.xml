<decorators defaultdir="/sys/decorator">

	<excludes>
		<pattern>/login*</pattern>
		<pattern>/index.jsp</pattern>
	</excludes>

	<!-- Default URL. Handled all unhandled previous URL pattern -->
	
	<decorator name="commonDecorator" page="default.jsp">
		<pattern>/common/*</pattern>
	</decorator>

	<decorator name="administratorDecorator" page="administratorDecorator.jsp">
		<pattern>/admin/*</pattern>
	</decorator>
	
	<decorator name="administratorDecorator" page="administratorDecorator.jsp">
		<pattern>/report/*</pattern>
	</decorator>
</decorators>
