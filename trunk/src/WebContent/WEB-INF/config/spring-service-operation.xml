<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:jee="http://www.springframework.org/schema/jee" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
        
        
        <bean id="codeManagementServiceImpl"
		class="sg.edu.nus.iss.vms.common.service.impl.CodeManagementServicesImpl">
		<property name="manager" ref="baseManager" />
		<property name="sessionBean" ref="sessionBean" />
	</bean>
        
        <bean id="volunteerManagementServiceImpl"
		class="sg.edu.nus.iss.vms.volunteer.service.impl.VolunteerManagementServiceImpl">
		<property name="manager" ref="baseManager" />
		<property name="sessionBean" ref="sessionBean" />
		<property name="passwordEncoder" ref="passwordEncoder" />
	</bean>
            

        

	<bean id="memberManagementServiceImpl"
		class="sg.edu.nus.iss.vms.member.service.impl.MemberManagementServiceImpl">
		<property name="manager" ref="baseManager" />
		<property name="sessionBean" ref="sessionBean" />
	</bean>

	<bean id="projectManagementServiceImpl"
		class="sg.edu.nus.iss.vms.project.service.impl.ProjectManagementServiceImpl">
		<property name="manager" ref="baseManager" />
		<property name="sessionBean" ref="sessionBean" />
        <property name="mailSenderUtil" ref="mailSenderUtilImpl"/> 
	</bean>

	<bean id="reportManagementServicesImpl"
		class="sg.edu.nus.iss.vms.reportmgmt.impl.ReportManagementServicesImpl">
		<property name="manager" ref="baseManager" />
	<!--	<property name="driverClassName" value="com.mysql.jdbc.Driver" /> -->
		<property name="url" value="${sys.server.database.default.url}" />
		<property name="username" value="${sys.server.database.default.username}" />
		<property name="password" value="${sys.server.database.default.password}" />
	<!--  <property name="maxActive" value="100" />
		<property name="maxIdle" value="30" />
		<property name="maxWait" value="1000" />-->	
		<property name="sessionBean" ref="sessionBean" />
	</bean>

	<bean id="certificateManagementImpl"
		class="sg.edu.nus.iss.vms.reportmgmt.impl.CertificateManagementImpl">
		<property name="manager" ref="baseManager" />
		<property name="sessionBean" ref="sessionBean" />
	</bean>
	
	<bean id="userManagementServiceImpl"
		class="sg.edu.nus.iss.vms.admin.service.impl.UserManagementServicesImpl">
		<property name="manager" ref="baseManager" />
		<property name="sessionBean" ref="sessionBean" />
		<property name="passwordEncoder" ref="passwordEncoder"/> 
	</bean>	
</beans>
